@model ControleDePeso.Models.GravarPassosViewModel

@{
    ViewData["Title"] = "Gravar passos";
}

<h3>Gravar passos</h3>
<hr />

<form asp-action="Gravar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-2">
        <label asp-for="DataDoRegistro" class="control-label"></label>
        <input asp-for="DataDoRegistro" class="form-control" />
        <span asp-validation-for="DataDoRegistro" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Passos" class="control-label"></label>
        <input asp-for="Passos" class="form-control" />
        <span asp-validation-for="Passos" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary">Gravar</button>
        <button class="btn btn-light" asp-action="Index" asp-controller="Home">Voltar</button>
    </div>

</form>



