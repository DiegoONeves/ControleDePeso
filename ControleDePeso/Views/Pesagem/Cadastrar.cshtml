@model ControleDePeso.Models.PesagemViewModel

@{
    ViewData["Title"] = "Cadastrar pesagem";
}

<h3>Cadastrar pesagem</h3>
<hr />

<form asp-action="Cadastrar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-2">
        <label asp-for="DataDoRegistro" class="control-label"></label>
        <input asp-for="DataDoRegistro" class="form-control" />
        <span asp-validation-for="DataDoRegistro" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Peso" class="control-label"></label>
        <input asp-for="Peso" class="form-control" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary">Cadastrar</button>
        <button class="btn btn-light" asp-action="Index" asp-controller="Home">Voltar</button>
    </div>

</form>



