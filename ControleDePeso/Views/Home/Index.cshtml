                <td>
                    @Html.DisplayFor(modelItem => item.Ano)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}