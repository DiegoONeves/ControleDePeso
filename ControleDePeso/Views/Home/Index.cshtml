@model ControleDePeso.Models.DashBoardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard da Saúde</h1>

<table class="table table-bordered table-hover">
    <thead class="text-center">
        <tr>
            <th colspan="2">
                Média móvel (semanal)
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Referência")
            </th>
            <th>
                @Html.DisplayName($"Peso")
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
               Última semana
            </td>
            <td>
                @Model.Resultado.MediaMovelSemanal.MediaMovelPeso1
            </td>
        </tr>
        <tr>
            <td>
                Segunda semana mais antiga
            </td>
            <td>
                @Model.Resultado.MediaMovelSemanal.MediaMovelPeso2
            </td>
        </tr>
        <tr>
            <td>
                Terceira semana mais antiga
            </td>
            <td>
                @Model.Resultado.MediaMovelSemanal.MediaMovelPeso3
            </td>
        </tr>
        <tr>
            <td>
                Quarta semana mais antiga
            </td>
            <td>
                @Model.Resultado.MediaMovelSemanal.MediaMovelPeso4
            </td>
        </tr>
    </tbody>
</table>
<br />
