<table class="table table-bordered table-hover">
    <thead class="text-center">
        <tr>
            <th colspan="2">
                Média dos últimos meses
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayName("Mês/Ano")
            </th>
            <th>
                @Html.DisplayName($"Média de peso")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Resultado.UltimosMeses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.MediaDePeso)
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<table class="table table-bordered table-hover">
